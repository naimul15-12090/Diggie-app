<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:elevation="3dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingTop="10dp"
                android:layout_weight="1.5"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherName"
                    android:padding="4dp"
                    android:text="Naimul Huda Walid"
                    android:textColor="@color/textColor1"
                    android:textSize="16sp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherInitial"
                    android:padding="4dp"
                    android:text="NHW"
                    android:textStyle="bold"
                    android:textColor="@color/textColor1"
                    android:textSize="18sp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherempid"
                    android:padding="4dp"
                    android:text="ID: "
                    android:layout_weight=".75"
                    android:textStyle="bold"
                    android:textColor="@color/textColor1"
                    android:textSize="18sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/teacherId"
                        android:padding="2dp"
                        android:text="017712990 "
                        android:textIsSelectable="true"
                        android:textColor="@color/textColor1"
                        android:textSize="18sp"/>


                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherPhone"
                    android:padding="4dp"
                    android:text="01778267062"
                    android:textIsSelectable="true"
                    android:textColor="@color/textColor1"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/teacherEmail"
                    android:padding="4dp"
                    android:text="Naimul123@gmail.com"
                    android:textIsSelectable="true"
                    android:textColor="@color/textColor1"
                    android:textSize="16sp"/>



            </LinearLayout>

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="4dp"
                android:id="@+id/teacherImage"
                android:src="@drawable/profile_pic"
                android:layout_gravity="center"
                android:layout_weight="0.6"/>


        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>